<%- layout("layouts/boilerplate") %>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    overflow-x: auto;
    scrollbar-width: none;
  }
  #filters::-webkit-scrollbar {
    display: none;
  }

  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
    transition: all 0.3s ease;
  }
  .filter:hover {
    opacity: 1;
    transform: scale(1.1);
    cursor: pointer;
  }
  .filter p {
    font-size: 0.8rem;
    margin-top: 0.2rem;
  }

  /* Active Filter Highlight */
  .active-filter {
    opacity: 1;
    color: #fe424d;
  }

  .tax-info {
    display: none;
  }
  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.5rem;
    padding: 1rem;
    margin-left: auto;
    display: flex;
    align-items: center;
  }
</style>

<div id="filters">
  <% const filters = [
    { icon: "fa-fire", name: "Trending" },
    { icon: "fa-bed", name: "Rooms" },
    { icon: "fa-mountain-city", name: "Iconic citys" },
    { icon: "fa-mountain", name: "Mountains" },
    { icon: "fa-fort-awesome", name: "Castles", brand: true },
    { icon: "fa-person-swimming", name: "Amazing pools" },
    { icon: "fa-campground", name: "Camping" },
    { icon: "fa-wheat-awn", name: "Farms" },
    { icon: "fa-snowflake", name: "Arctic" }
  ]; %>

  <% filters.forEach(f => { %>
    <a
      href="/listings/search?category=<%= f.name %><% if (typeof searchQuery !== 'undefined' && searchQuery) { %>&q=<%= searchQuery %><% } %>"
      class="filter text-decoration-none text-dark <%= filterCategory === f.name ? 'active-filter' : '' %>"
    >
      <div>
        <i class="fa-solid <%= f.icon %>"></i>
      </div>
      <p><%= f.name %></p>
    </a>
  <% }); %>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="flexSwitchCheckDefault"
      />
      <label
        class="form-check-label"
        for="flexSwitchCheckDefault"
        >Display total after taxes</label
      >
    </div>
  </div>
</div>

<!-- Listings Section -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for (let listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none text-dark">
    <div class="card col listing-card shadow-sm mb-3" style="border-radius: 1rem;">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem; object-fit: cover; border-radius: 1rem 1rem 0 0;"
      />
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b> <br />
          &#8377; <%= listing.price.toLocaleString('en-IN') %> / night
          <i class="tax-info">&nbsp;+18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>

<div>
  <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
    <h5 class="text-center mt-3">
      Search results for "<%= searchQuery %>"
    </h5>
  <% } %>
  <% if (filterCategory) { %>
    <h5 class="text-center text-muted">
      Category: <%= filterCategory %>
    </h5>
  <% } %>
  <% if (allListings.length === 0) { %>
    <p class="text-center text-muted mt-2">No listings found.</p>
  <% } %>
</div>

<script>
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      info.style.display = info.style.display !== "inline" ? "inline" : "none";
    }
  });
</script>

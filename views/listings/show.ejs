<%- layout("layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-3">
    <h3><%= listing.title  %></h3>
    </div>
    <div class="card col-6 offset-3 show-card">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
  <div class="card-body">
    <p class="card-text">
       <b><%= listing.description  %></b> <br>
       <b>&#8377; <%= listing.price.toLocaleString('en-IN') %></b> <br>
       <b><%= listing.location  %></b> <br>
       <b><%= listing.country %></b> <br>
    </p>
  </div>
    </div>
    <br>
    </div>
    <div class="btns">
         <a href="/listings/<%= listing._id  %>/edit" class="btn btn-dark col-1 offset-3 edit-btn mb-3">Edit</a>
    <form action="/listings/<%= listing._id%>?_method=DELETE" method="POST">
        <button class="btn btn-dark offset-5 mb-3">Delete</button>
    </form>
    </div>
   </div>